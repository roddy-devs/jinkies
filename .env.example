# Discord Configuration (Required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_ALERT_CHANNEL_ID=1463579690097709230
DISCORD_ALERT_CHANNEL_DEV_ID=1463579722817474765
DISCORD_LOG_CHANNEL_ID=your_log_channel_id
DISCORD_DEPLOY_CHANNEL_ID=your_deploy_channel_id
DISCORD_COPILOT_CHANNEL_ID=your_copilot_channel_id
DISCORD_ALLOWED_ROLES=Admin,DevOps

# GitHub Configuration (Optional - for creating issues/PRs from alerts)
GITHUB_PRIVATE_KEY=your_github_token_here
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name
DEFAULT_BASE_BRANCH=main

# Deployment Configuration (Optional - for direct deployments)
# If not set, only GitHub Actions deployments will be available
DEPLOY_REPO_PATH=/Users/your-username/source/nomadic-influence
DEPLOY_SSH_KEY=/Users/your-username/.ssh/nomadic-influence.pem
DEPLOY_EC2_HOST=your-ec2-host.compute.amazonaws.com
DEPLOY_EC2_USER=ubuntu

# Nomadic Influence API (Required for verification)
NOMADIC_API_URL=https://api.nomadicinfluence.com

# Django Admin URLs
DJANGO_ADMIN_URL_PROD=https://api.nomadicinfluence.com
DJANGO_ADMIN_URL_DEV=http://localhost:8000

# Environment
ENVIRONMENT_NAME=production
LOG_LEVEL=INFO
