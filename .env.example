# Discord Configuration (Required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_ALERT_CHANNEL_ID=your_alert_channel_id
DISCORD_LOG_CHANNEL_ID=your_log_channel_id
DISCORD_ALLOWED_ROLES=Admin,DevOps

# GitHub Configuration (Optional - for creating issues/PRs from alerts)
GITHUB_PRIVATE_KEY=your_github_token_here
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name
DEFAULT_BASE_BRANCH=main

# Nomadic Influence API (Required for verification)
NOMADIC_API_URL=https://api.nomadicinfluence.com

# Environment
ENVIRONMENT_NAME=production
LOG_LEVEL=INFO
