# Discord Configuration (Required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_ALERT_CHANNEL_ID=your_alert_channel_id
DISCORD_ALERT_CHANNEL_DEV_ID=your_dev_alert_channel_id
DISCORD_LOG_CHANNEL_ID=your_log_channel_id
DISCORD_DEPLOY_CHANNEL_ID=your_deploy_channel_id
DISCORD_COPILOT_CHANNEL_ID=your_copilot_channel_id
DISCORD_ALLOWED_ROLES=Admin,DevOps

# GitHub Configuration (Optional - for creating issues/PRs from alerts)
GITHUB_PRIVATE_KEY=your_github_token_here
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name
DEFAULT_BASE_BRANCH=main

# Deployment Configuration (Optional - for direct deployments)
# If not set, only GitHub Actions deployments will be available
DEPLOY_REPO_PATH=/path/to/your/repo
DEPLOY_SSH_KEY=/path/to/your/ssh/key.pem
DEPLOY_EC2_HOST=your-ec2-host.compute.amazonaws.com
DEPLOY_EC2_USER=ubuntu

# Your Application API (Optional - customize for your app)
YOUR_API_URL=https://api.yourapp.com
YOUR_API_KEY=your_api_key_here

# Django Admin URLs (Optional - if using Django)
DJANGO_ADMIN_URL_PROD=https://api.yourapp.com
DJANGO_ADMIN_URL_DEV=http://localhost:8000

# AWS Configuration (Optional - for CloudWatch and deployments)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CloudWatch Log Groups (Optional)
CLOUDWATCH_LOG_GROUP_API=/aws/ec2/your-api
CLOUDWATCH_LOG_GROUP_CLOUDFRONT=/aws/cloudfront/access-logs

# OpenAI Configuration (Optional - for AI-powered features)
OPENAI_API_KEY=your_openai_api_key

# Environment
ENVIRONMENT_NAME=production
LOG_LEVEL=INFO
